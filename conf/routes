# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
#GET    /login                      controllers.Application.getlogin()
POST  /1/login     controllers.Application.login()
POST /1/starttimer controllers.Application.starttimer()
POST /1/endtimer   controllers.Application.endtimer()


GET     /crtpatient/create/:patientname      controllers.CassandraCntrls.createPatient(patientname:String)
GET     /getpatientlist/:patientIdList               controllers.CassandraCntrls.getPatientList(patientIdList:String)
GET     /getpatient/:patientId               controllers.CassandraCntrls.getPatient(patientId:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
